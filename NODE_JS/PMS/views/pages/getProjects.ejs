<br><br><br>
    <div class="card"> 
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <a class="nav-link"><h3>Project List</h3></a>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/employees/add">Add Employee</a>
                </li>
            </ul>
        </div>
    <div class="card-body">
        
        <% if(data.length) { %>
          <table class="table">
            <thead>
                <tr>
                    <th scope="col">Project No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Start Date </th>
                    <th scope="col">Duration</th>
                    <th scope="col">Budget</th>
                    <th >Actions</th>
                </tr>
            </thead>
            <tbody>
                <%  %> 
                
            <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                    <!-- <th scope="row"><%= (i+1) %></th> -->
                    <td><%= data[i].pro_no%></td>
                    <td><%= data[i].pro_name%></td>
                    <td><%= data[i].start_date%></td>
                    <td><%= data[i].duration%></td>
                    <td><%= data[i].budget%></td>


                    <td>
                    <a  href="/employees/info/<%=data[i].pro_no%>"><i class="fa fa-info-circle" 
                        aria-hidden="true"
                        title="More Info"
                        style="font-size:30px;"></i></a>
                    <a  href="/employees/edit/<%=data[i].pro_no%>"><i class="fa fa-pencil-square" 
                        aria-hidden="true"
                        title="Edit?"
                        style="font-size:30px;"></i><a>                       
                        <a  onclick="return confirm('Are You sure?')" href="/employees/delete/<%=data[i].pro_no%>"><i class="fa fa-trash"
                            title="Delete?" 
                            style="font-size:30px;" 
                            aria-hidden="true"></i></a>                       
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% } %>
        
        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">No data found!</p>
        <% } %>
 

        </div>
    </div>
