<%- include ("../partials/header.ejs") %>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
    <!-- Font Awesome CSS -->
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css'>
    <br><br><br><br>
    <div class="student-profile py-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent text-center">
                            <img class="profile_img" src="/images/user.jpg" alt="student dp" width="250" height="250">
                            <h3>
                                <%=data[0].username%>
                            </h3>
                        </div>
                        <div class="card-body">
                            <p class="mb-0"><strong class="pr-1">Student ID:</strong> AL0
                                <%=data[0].userid%>
                            </p>
                            <p class="mb-0"><strong class="pr-1">Name:</strong>
                                <%=data[0].username%>
                            </p>
                            <p class="mb-0"><strong class="pr-1">Course:</strong>
                                <%=data[0].course%>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent border-0">
                            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>General Information</h3>
                        </div>
                        <div class="card-body pt-0">
                            <table class="table table-bordered">
                                <tr>
                                    <th width="30%">Father's Name</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%=data[0].fathername%>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">Date of Birth</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%=data[0].dob%>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">Gender</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%=data[0].gender%>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">Date of Join </th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%=data[0].joined%>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">Course Duration</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%=data[0].duration%>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">Fees</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%=data[0].fees%>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">Email ID</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%=data[0].emailid%>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">Phone Number</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%=data[0].Phone%>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">Alternative Number</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%=data[0].Phonenext%>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">Address</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%=data[0].Address%>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">Comments</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%=data[0].comments%>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">Status</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%=data[0].statusnow%>
                                    </td>
                                </tr>

                                </tr>
                            </table>
                        </div>
                    </div>
                    <div style="height: 26px"></div>
                    <div class="card shadow-sm">

                    </div>
                </div>
            </div>
        </div>
        <div style=" padding-left:800px; "><br>
            <a style="margin-right: 210px; background-color:rgb(39, 114, 53);" class="btn btn-primary" href="/students">Back</a>
        </div>
    </div>

