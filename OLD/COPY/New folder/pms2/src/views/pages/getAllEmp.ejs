<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>PMS</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">

    <div class="card"> 
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <a class="nav-link"><h3>Employee List</h3></a>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/employees/add">Add Employee</a>
                </li>
            </ul>
        </div>
    <div class="card-body">
        
        <% if(data.length) { %>
          <table class="table">
            <thead>
                <tr>
                    <th scope="col">Emp No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Job</th>
                    <th scope="col">Manager</th>
                    <th >Actions</th>
                </tr>
            </thead>
            <tbody>
                <%  %> 
                
            <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                    <!-- <th scope="row"><%= (i+1) %></th> -->
                    <td><%= data[i].id%></td>
                    <td><%= data[i].name%></td>
                    <td><%= data[i].designation%></td>
                    <td><%= data[i].salary%></td>

                    <td>
                    <a class="btn btn-success edit" href="/employees/info/<%=data[i].id%>">Info</a>
                    <a class="btn btn-primary edit" href="/employees/edit/<%=data[i].id%>">Edit<a>                       
                        <a class="btn btn-danger delete" onclick="return confirm('Are You sure?')" href="/employees/delete/<%=data[i].id%>">Delete</a>                       
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% } %>
        
        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">No data found!</p>
        <% } %>
 

        </div>
    </div>

</body>
</html>